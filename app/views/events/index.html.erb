<div class="container d-flex" style="height:100vh;">
  <%#= render "shared/categories" %>
  <div class="card col-3">
    <div id="scrollingTable" style="overflow-y:scroll">
      <% @events.each do |event| %>
      <a href="<%=event.url%>" class="href">
        <ul style="list-style-type:none;">
          <%#= link_to "<%= event.name %><!-- <i class="far fa-heart"></i>", new_favourite_path(event) %> -->
          <p><strong><%= event.name %></strong></p><i class="far fa-heart"></i>
          <p>Start:<%= event.start_date %></p>
          <p><%= event.category %></p>
        </ul>
      </a>
      <% end %>
    </div>
  </div>
  <div
    id="map"
    style="width: 100%;
    height: 100vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>




