<%= render "shared/mapbar" %>
<div class="center-container d-flex" style="height:87vh;">
  <div class="col-3"style="padding-left: 0px; padding-right: 9px;">
    <div id="scrollingTable" style="overflow-y:scroll">
      <% @events.each do |event| %>
        <a href="<%=event.url%>" class="href" target="_blank">
        <div class="flip-card">
          <div class="flip-card-inner">
            <div class="flip-card-front">
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=event.photo%>)">
              </div>
            </div>
            <div class="flip-card-back">
              <ul style="list-style-type:none;">
                <p><strong><%= event.name %></strong></p>
                <p><%= event.start_date %> - <%= event.end_date %></p>
                <p><%= event.location %></p>
                <a href="new_favourite_path(event.id)" class="href"><i class="far fa-heart"></i></a>
              </ul>
            </div>
          </div>
        </div>
        </a>
      <% end %>
    </div>
  </div>
  <div id="map" data-markers="<%= @markers.to_json %>" style="height: 100%; width: 100%"></div>
